@model Mission6.Models.Movie

@{
    ViewData["Title"] = "Add a New Movie";
}

<h2>Add a New Movie</h2>

<form asp-action="AddMovie" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Year</label>
        <input asp-for="Year" class="form-control" type="number" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Rating</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <!-- Edited field as Yes/No option -->
    <div class="mb-3">
        <label class="form-label">Edited (Optional)</label>
        <select asp-for="Edited" class="form-control">
            <option value="">Select Yes or No</option> <!-- Default empty option -->
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Lent To (Optional)</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Notes (Optional, Max 25 Characters)</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
